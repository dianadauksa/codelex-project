{% extends 'layout.twig' %}
{% block content %}
    <div class="flex items-center bg-gray-100 text-gray-800">
        <div class="p-4 w-full">
            <p class="font-bold text-2xl my-2 mx-1">Money in my wallet: ${{ auth.money|number_format(2) }} </p>
            <p class="font-bold text-2xl mb-1 mx-1">My stocks: </p>
            <div class="grid grid-cols-12 gap-4">
                {% for stock in portfolio %}
                    <div class="col-span-12 sm:col-span-6 md:col-span-3">
                        <div class="flex flex-row bg-white shadow-sm rounded p-4">
                            <div class="flex flex-col flex-grow ml-4">
                                <div class="text-sm text-gray-500">
                                    <div class="col-span-12 lg:col-span-8">
                                        <a href="/stock?symbol={{ stock.symbol }}"
                                           class="inline-block rounded-full text-white bg-black text-xs font-bold mr-1 md:mr-2 mb-2 px-2 md:px-4 py-1">
                                            {{ stock.symbol }}
                                        </a>
                                    </div>
                                </div>
                                <div class="font-bold text-md">Current Price: ${{ stock.currentPrice|number_format(2) }}</div>
                                <div class="font-bold text-md">Avg Price Paid: ${{ stock.averagePrice|number_format(2) }}</div>
                                <p>Amount owned: <span class="text-emerald-600">{{ stock.amountOwned }} stocks</span>
                                </p>
                            </div>
                            {% if (stock.change >= 0) %}
                                <button class="inline-flex items-center rounded-full text-white bg-emerald-600 text-xs font-bold my-5 mr-1 md:mr-2 mb-2 px-2 md:px-4 py-1">
                                    P/L: ▲${{ stock.change|number_format(2) }}
                                </button>
                            {% else %}
                                <button class="inline-flex items-center rounded-full text-white bg-red-600 text-xs font-bold my-5 mr-1 md:mr-2 mb-2 px-2 md:px-4 py-1">
                                    P/L: ▼${{ stock.change|number_format(2) }}
                                </button>
                            {% endif %}
                        </div>
                    </div>

                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}