{% extends 'layout.twig' %}
{% block content %}
    <div class="bg-gray-100 text-gray-800">
        <div><h1 class="text-center text-lg font-bold text-2xl py-2">Choose your stock:</h1></div>
        <div class="flex justify-center mx-auto">
            {% for stock in portfolio %}
                {% if (symbol == stock) %}
                <a href="/transactions-for?symbol={{ stock }}"
                   class="rounded-full text-white bg-sky-500 text-lg font-bold mr-1 md:mr-2 mb-2 px-2 md:px-4 py-1">
                    {{ stock }}
                </a>
                {% else %}
                    <a href="/transactions-for?symbol={{ stock }}"
                       class="rounded-full text-white bg-black text-lg font-bold mr-1 md:mr-2 mb-2 px-2 md:px-4 py-1">
                        {{ stock }}
                    </a>
                {% endif %}
            {% endfor %}
        </div>

        {% if transactions %}
        <div class="flex justify-center text-center mx-auto">
            <table class="w-4/5 mt-3">
                <thead>
                <tr class="bg-gray-300">
                    <th class="py-2 px-3">Stock Symbol</th>
                    <th class="py-2 px-3">Transaction</th>
                    <th class="py-2 px-3">Amount</th>
                    <th class="py-2 px-3">Stock Price</th>
                    <th class="py-2 px-3">Total Sum</th>
                    <th class="py-2 px-3">Date</th>
                </tr>
                </thead>
                <tbody>

                    {% for transaction in transactions %}
                        <tr>
                            <td class="py-1">{{ transaction.symbol }}</td>
                            <td class="py-1">{{ transaction.type }}</td>
                            <td class="py-1">{{ transaction.amount }}</td>
                            <td class="py-1">{{ transaction.price|number_format(2) }}</td>
                            <td class="py-1">{{ transaction.total_sum|number_format(2) }}</td>
                            <td class="py-1">{{ transaction.date }}</td>
                        </tr>
                    {% endfor %}
                {% endif %}
                </tbody>
            </table>
        </div>

    </div>

{% endblock %}